

<h1><%= "Write about #{@prompt.name}"%></h1>

<div class="row">
	<div class="col-md-5">

<%= simple_form_for @story, html: { class: 'form-horizontal'} do |form| %><br>
	 <%= form.input :body, label: "Your story:", as: :text %><br>
	 <%= form.input :prompt_id, as: :hidden %><br>
	 <%= form.input :photo, label: "Include a photo:"%><br>
	 <%= form.submit 'Post', class: 'btn btn-primary' %>
<% end %>
</div>
</div>